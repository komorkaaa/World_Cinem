<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.WorldCinema" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/bg_dark</item>
        <item name="colorPrimary">@color/bg_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/accent_teal</item>
        <item name="materialButtonStyle">@style/Widget.WorldCinema.Button</item>
    </style>

    <style name="Widget.WorldCinema.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/accent_teal</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Theme.WorldCinema.Splash" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>
